<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="matmik.pcvisualinterface.PCFXMLController">
    <children>
        <Label fx:id="label" layoutX="126" layoutY="120" minHeight="16" minWidth="69" />
      <TabPane fx:id="tabPane" layoutX="48.0" prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <tabs>
          <Tab id="titleTab" fx:id="titleTab" text="TitleTab">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="136.0" prefWidth="200.0">
                     <children>
                        <Button layoutX="228.0" layoutY="186.0" mnemonicParsing="false" onMouseClicked="#initForPC" text="играть  с не человеком" />
                        <Button layoutX="227.0" layoutY="144.0" mnemonicParsing="false" onMouseClicked="#initForHuman" prefHeight="25.0" prefWidth="146.0" text="играть с человеком" />
                     </children></AnchorPane>
            </content>
          </Tab>
          <Tab id="selectDifficultyTab" fx:id="setDifficultyTab" text="SelectDifficultyTab">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <Button layoutX="233.0" layoutY="96.0" mnemonicParsing="false" onMouseClicked="#pickDifficultyEasy" prefHeight="25.0" prefWidth="101.0" text="Совсем тупой" />
                        <Button layoutX="233.0" layoutY="134.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="100.0" text="Тупой" />
                        <Button layoutX="233.0" layoutY="173.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="101.0" text="Почти тупой" />
                     </children></AnchorPane>
            </content>
          </Tab>
            <Tab id="placementTab" fx:id="placementTab" text="PlacementTab">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <Label fx:id="stateLabel" text="Label" />
                        <ImageView fx:id="placementImage" fitHeight="300.0" fitWidth="600.0" layoutY="25.0" onMouseDragged="#moveShip" onMousePressed="#pickShip" onMouseReleased="#dropShip" pickOnBounds="true" preserveRatio="true" />
                        <Button layoutX="309.0" layoutY="251.0" mnemonicParsing="false" onMouseClicked="#clearBoard" text="Очистить" />
                        <Button layoutX="384.0" layoutY="250.0" mnemonicParsing="false" onMouseClicked="#placeShips" text="Авторасставить" />
                        <Button layoutX="493.0" layoutY="250.0" mnemonicParsing="false" onMouseClicked="#rotateBank" text="Повернуть" />
                        <Button layoutX="351.0" layoutY="313.0" mnemonicParsing="false" onMouseClicked="#toBattle" text="В бой" />
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
            <Tab fx:id="gameTab" text="Game Tab">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <ImageView fx:id="gameImage" fitHeight="300.0" fitWidth="600.0" onMouseClicked="#hitPosition" onMousePressed="#pickShip" onMouseReleased="#dropShip" pickOnBounds="true" preserveRatio="true" />
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
        </tabs>
      </TabPane>
    </children>
</AnchorPane>
