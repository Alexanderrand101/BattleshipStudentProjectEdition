        <tabs>
          <Tab id="titleTab" fx:id="titleTab" text="TitleTab">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="136.0" prefWidth="200.0">
                     <children>
                        <Button layoutX="228.0" layoutY="186.0" mnemonicParsing="false" onMouseClicked="#initForPC" text="играть  с не человеком" />
                        <Button layoutX="227.0" layoutY="144.0" mnemonicParsing="false" onMouseClicked="#initForHuman" prefHeight="25.0" prefWidth="146.0" text="играть с человеком" />
                     </children></AnchorPane>
            </content>
          </Tab>
          <Tab id="selectDifficultyTab" fx:id="setDifficultyTab" text="SelectDifficultyTab">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <Button layoutX="233.0" layoutY="96.0" mnemonicParsing="false" onMouseClicked="#pickDifficultyEasy" prefHeight="25.0" prefWidth="101.0" text="Совсем тупой" />
                        <Button layoutX="233.0" layoutY="134.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="100.0" text="Тупой" />
                        <Button layoutX="233.0" layoutY="173.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="101.0" text="Почти тупой" />
                     </children></AnchorPane>
            </content>
          </Tab>
            <Tab id="placementTab" fx:id="placementTab" text="PlacementTab">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <StackPane layoutX="184.0" layoutY="131.0" prefHeight="150.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
